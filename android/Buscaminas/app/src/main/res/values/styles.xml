<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorGradiente3</item>
        <item name="colorAccent">@color/colorGradiente1</item>
    </style>

    <!-- Estilos Menu Principal Portrait -->
    <style name="menu_princ_titulo">
        <item name="android:textStyle">bold|italic</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:textColor">#414073</item>
    </style>

    <style name="menu_princ_botones_primer_boton">
        <item name="android:textStyle">italic</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="menu_princ_botones">
        <item name="android:textStyle">italic</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>
    
    <!-- Estilos Menu Principal LandsScape -->
    <style name="landscape_botones_primer_boton">
        <item name="android:textStyle">italic</item>
        <item name="android:layout_width">@dimen/boton_principal_landscape_ancho</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- Estilos Juego Principal -->
    <style name="juego_princ_output_titulo">
        <item name="android:textStyle">italic</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorGradiente5</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="juego_princ_output_texto">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorGradiente1</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="juego_princ_separador">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="juego_princ_grid_layout">
        <item name="android:layout_marginBottom">90dp</item>
        <item name="android:layout_marginLeft">60dp</item>
        <item name="android:layout_marginRight">60dp</item>
        <item name="android:layout_marginTop">120dp</item>
    </style>

    <style name="juego_princ_casillas_tres_columnas">

    </style>
</resources>
